    <script>
        let currentQuestion = 1;
        const totalQuestions = 7;
        let answers = {};
        let totalScore = 0;

        const products = {
            trexTranscend: {
                name: "Trex Transcend",
                brand: "Trex",
                tier: "Premium",
                description: "The ultimate in composite decking with superior performance and stunning aesthetics",
